@model IEnumerable<HiQo.StaffManagement.Domain.EntitiesDTO.CategoryDto>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p><a class="btn btn-default" href="~/Role/Create">Create category &raquo;</a></p>
<table class="table">
    <thead>
        <tr>
            <td>Name</td>
            <td>Department</td>
        </tr>
    </thead>
    <tbody class="tab-content">
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Department.Name</td>
                <td><a class="btn btn-default" href="~/Category/Update/@category.CategoryId">Edit &raquo;</a></td>
            </tr>
        }
    </tbody>
</table>
