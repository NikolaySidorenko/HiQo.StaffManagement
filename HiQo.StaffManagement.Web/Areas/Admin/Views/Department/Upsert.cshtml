@model HiQo.StaffManagement.Web.Core.Models.DepartmentViewModel
@{
    ViewBag.Title = "Upsert";
}


@if (Model == null)
{
    <h3>New department</h3>
}
else
{
    <h3>@Model.Name</h3>
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm("Upsert", "Department", FormMethod.Post))
            {
                @Html.HiddenFor(dep => dep.DepartmentId)
                <p>@Html.LabelFor(dep => dep.Name, "Name")</p>
                <p>@Html.EditorFor(dep => dep.Name, new {htmlAttributes = new {@class = "form-control"}})</p>
                <input type="submit" class="btn btn-default" value="Save"/>
            }
        </div>
    </div>

</div>

